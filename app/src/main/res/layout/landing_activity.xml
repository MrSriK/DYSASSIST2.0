<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="844dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="395dp"
            android:layout_height="71dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/bold"
            android:letterSpacing="0.1"
            android:shadowColor="@color/ebony"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="3"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/dodger_blue"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/speechbtn"
            android:layout_width="249dp"
            android:layout_height="122dp"
            android:layout_marginTop="232dp"
            android:background="@drawable/shadow_log"
            android:elevation="100dp"
            android:fontFamily="@font/regular"
            android:lineSpacingExtra="12sp"
            android:shadowColor="@color/ebony"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="3"
            android:text="@string/speech_to_text"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <Button
            android:id="@+id/imagebtn"
            android:layout_width="249dp"
            android:layout_height="125dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/shadow_log"
            android:elevation="100dp"
            android:fontFamily="@font/regular"
            android:lineSpacingExtra="12sp"
            android:shadowColor="@color/ebony"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="3"
            android:text="@string/Imagetotxt"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speechbtn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/convertbtn"
            android:layout_width="249dp"
            android:layout_height="118dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/shadow_log"
            android:elevation="100dp"
            android:fontFamily="@font/regular"
            android:lineSpacingExtra="12sp"
            android:shadowColor="@color/ebony"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="3"
            android:text="@string/converttxtbtn"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagebtn" />

        <Button
            android:id="@+id/spacerbtn"
            android:layout_width="258dp"
            android:layout_height="116dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/shadow_log"
            android:elevation="100dp"
            android:fontFamily="@font/regular"
            android:lineSpacingExtra="12sp"
            android:shadowColor="@color/ebony"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="3"
            android:text="@string/spacertxtbtn"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertbtn" />

        <Button
            android:id="@+id/quizbtn"
            android:layout_width="258dp"
            android:layout_height="116dp"
            android:layout_marginTop="232dp"
            android:background="@drawable/shadow_log"
            android:elevation="100dp"
            android:fontFamily="@font/regular"
            android:lineSpacingExtra="12sp"
            android:shadowColor="@color/ebony"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="3"
            android:text="@string/open_dyschamp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertbtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>